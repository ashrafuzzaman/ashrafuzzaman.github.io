---
import { Icon } from "astro-icon";

export interface Props {
  experience: any;
}

const { experience } = Astro.props;
const { title, company, from, till, brief, responsibilities } = experience;
---

<div class="break-inside-avoid">
  <div class="mb-2 flex items-end justify-between align-bottom">
    <h2 class="mt-3 text-xl font-semibold">
      {title},
      <span class="text-skin-accent">{company}</span>
    </h2>

    <h4 class="text-skin-secondary">{from} - {till}</h4>
  </div>
  {brief ? <p>{brief}</p> : ""}
  {
    responsibilities ? (
      <ul class="ml-3">
        {responsibilities.map(responsibility => (
          <li class="m-0 p-0">
            <Icon class="w-[18px]" name="mdi:arrow-right-thin" />
            <span>{responsibility}</span>
          </li>
        ))}
      </ul>
    ) : (
      ""
    )
  }
</div>
