---
import { Icon } from "astro-icon";

export interface Props {
  experience: any;
}

const { experience } = Astro.props;
const { title, company, companyLink, from, till, brief, responsibilities } =
  experience;
---

<div class="break-inside-avoid">
  <div class="mb-2 mt-2 flex items-end justify-between">
    <span class="flex items-end justify-start text-center">
      <h2 class="mt-3 text-xl font-semibold">{title},</h2>
      <h4 class="ml-2 text-skin-accent">
        {companyLink ? <a href={companyLink}>{company}</a> : company}
      </h4>
    </span>
    <h4 class="text-sm text-skin-secondary">{from} - {till}</h4>
  </div>
  {brief ? <p>{brief}</p> : ""}
  {
    responsibilities ? (
      <ul class="mt-3">
        {responsibilities.map(responsibility => (
          <li class="m-0 p-0">
            <Icon class="w-[18px]" name="mdi:arrow-right-thin" />
            <span>{responsibility}</span>
          </li>
        ))}
      </ul>
    ) : (
      ""
    )
  }
</div>
