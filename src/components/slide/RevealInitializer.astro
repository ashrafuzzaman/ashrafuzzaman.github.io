---
import "/node_modules/reveal.js/dist/reveal.css";
import "/node_modules/reveal.js/dist/theme/solarized.css";
import "/node_modules/reveal.js/plugin/highlight/monokai.css";
---

<script>
  import RevealMermaid from "@reveal-plugins/mermaid-plugin.js";
  import Reveal from "reveal.js";
  import RevealHighlight from "reveal.js/plugin/highlight/highlight.js";
  import Markdown from "reveal.js/plugin/markdown/markdown.js";
  import RevealNotes from "reveal.js/plugin/notes/notes.js";

  Reveal.initialize({
    plugins: [Markdown, RevealHighlight, RevealMermaid, RevealNotes],
    markdown: {
      smartypants: true,
    },
    mermaid: {
      // securityLevel: "sandbox",
      theme: "default",
      themeCSS: `
        rect.actor { rx: 10; ry: 10; }
        rect.actor + text.actor tspan { fill: #fff !important; }
        :has(body) { display: flex !important; justify-content: center; }
        .label foreignObject { overflow: visible; }
      `,
      themeVariables: {
        actorBkg: "#2F7FC1",
        actorBorder: "#2F7FC1",
      },
      sequence: {
        mirrorActors: false,
        actorFontWeight: 800,
      },
    },
    fragments: true,
    backgroundTransition: "slide",
    showNotes: false,
  });
</script>
